                    <li><a href="#"><i class="icon-gear"></i> All settings</a></li>
                </ul>
            </li>
        </ul>
    </div>
</div>
<!-- /page header -->
<!-- Content area -->
<div class="content">
    <!-- Form horizontal -->
    <div class="panel panel-flat">
        <div class="panel-heading">
            <h5 class="panel-title">Visitor Manager</h5>
            <div class="heading-elements">
                <ul class="icons-list">
                    <li><a data-action="collapse"></a></li>
                    <li><a data-action="reload"></a></li>
                    <li><a data-action="close"></a></li>
                </ul>
            </div>
        </div>
        <div class="panel-body">
            <form class="form-horizontal">
                <fieldset class="content-group">
                    <legend class="text-bold">Update Staff User</legend>
                    @if (Session["Type"] != null)
                    {
                        if (Session["Type"].ToString() == "SuperAdmin")
                        {
                            <div class="form-group">
                                <label class="control-label col-lg-1">Select Admin</label>
                                <div class="col-lg-10">
                                    <select id="ddl_Admin" class="form-control"></select>
                                    <span class="help-block" style="color:red;" id="lbl_Admin"></span>
                                </div>
                            </div>
                        }
                    }
                    <div class="form-group">
                        <label class="control-label col-lg-1">Staff ID</label>
                        <div class="col-lg-4">
                            <input type="text" class="form-control" id="txt_StaffIdUpdate" readonly />
                            <span class="help-block"></span>
                        </div>
                        <label class="control-label col-lg-1">Designation</label>
                        <div class="col-lg-4">
                            <input type="text" class="form-control" id="txt_DesignationUpdate" />
                            <span class="help-block" style="color:red;" id="lbl_DesignationUpdate"></span>
                        </div>


                    </div>
                    <div class="form-group">
                        <label class="control-label col-lg-1">Staff Name</label>
                        <div class="col-lg-4">
                            <input type="text" class="form-control" id="txt_StaffNameUpdate" />
                            <span class="help-block" style="color:red;" id="lbl_StaffNameUpdate"></span>
                        </div>
                        <label class="control-label col-lg-1">Email</label>
                        <div class="col-lg-4">
                            <input type="text" class="form-control" id="txt_EmailUpdate" />
                            <span class="help-block" style="color:red;" id="lbl_EmailUpdate"></span>
                        </div>


                    </div>
                    <div class="form-group">
                        <label class="control-label col-lg-1">Mobile</label>
                        <div class="col-lg-4">
                            <input type="text" class="form-control" id="txt_mobile1Update" />
                            <span class="help-block" style="color:red;" id="lbl_mobile1Update"></span>
                        </div>
                        <label class="control-label col-lg-1">Mobile 2</label>
                        <div class="col-lg-4">
                            <input type="text" class="form-control" id="txt_mobile2" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-lg-1">Address</label>
                        <div class="col-lg-4">
                            <input type="text" class="form-control" id="txt_AddressUpdate">
                            <span class="help-block" style="color:red;" id="lbl_AddressUpdate"></span>
                        </div>
                        <label class="control-label col-lg-1">State</label>
                        <div class="col-lg-4">
                            <input type="text" class="form-control" id="txt_StateUpdate">
                            <span class="help-block" style="color:red;" id="lbl_StateUpdate"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-lg-1">City</label>
                        <div class="col-lg-4">
                            <input type="text" class="form-control" id="txt_CityUpdate">
                            <span class="help-block" style="color:red;" id="lbl_CityUpdate"></span>
                        </div>

                        <label class="control-label col-lg-1">Zip Code</label>
                        <div class="col-lg-4">
                            <input type="text" class="form-control" id="txt_ZipCodeUpdate">
                            <span class="help-block" style="color:red;" id="lbl_ZipCodeUpdate"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-lg-1">Comment</label>
                        <div class="col-lg-4">
                            <input type="text" class="form-control" id="txt_Comment">
                        </div>
                    </div>

                </fieldset>

                <div class="text-right">
                    <button type="submit" class="btn btn-primary" onclick="userInfo.UpdateUserDetail(event)">UpDate <i class="icon-arrow-right14 position-right"></i></button>
                </div>
            </form>
        </div>
    </div>
    <!-- /form horizontal -->

</div>
<!-- /content area -->
